<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--main tab-->
    <style name="tab_main_item_background">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@drawable/tab_rb_color</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="style_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/div_color</item>
    </style>

    <style name="tab_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#e9e9e9</item>
    </style>

    <!--main tab-->
    <style name="tab2_main_item_background">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@drawable/tab2_rb_color</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="style_tab_layout_text">
        <item name="android:textSize">14sp</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="account_dialog_et">
        <item name="android:background">@drawable/bg_et_app</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:paddingEnd">13dp</item>
        <item name="android:lines">1</item>
    </style>

    <!-- CustomCheckBox theme -->
    <style name="checkbox_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

     <!--顶部弹出Dialog动画-->
    <style name="TopDialog" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_top_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_top_out</item>
    </style>

    <!--底部弹出Dialog动画-->
    <style name="BottomDialog" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_out</item>
    </style>

    <!--左边弹出Dialog动画-->
    <style name="LeftDialog" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_left_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_left_out</item>
    </style>

    <!--右边弹出Dialog动画-->
    <style name="RightDialog" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_right_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_right_out</item>
    </style>

    <!--中间弹出Dialog动画-->
    <style name="CenterDialog" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_center_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_center_out</item>
    </style>

    <style name="topAnimation">
        <item name="android:windowEnterAnimation">@anim/maginy_top2bottom</item>
        <item name="android:windowExitAnimation">@anim/shrink_bottom2top</item>
    </style>

    <!--popupMenu动画-->
    <style name="PopupMenu">
        <item name="android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
    </style>

    <style name="anim_menu_bottombar">
        <item name="android:windowEnterAnimation">@anim/menu_bottombar_in</item>
        <item name="android:windowExitAnimation">@anim/menu_bottombar_out</item>
    </style>

    <!--dialog去背景边框-->
    <style name="DialogStyle">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <!--dialog全屏-->
    <style name="DialogStyleFull">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>

    </style>

    <style name="style_selected_ratio">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>